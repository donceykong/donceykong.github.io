<div class="project-card-horizontal">
  <div class="row">
    {% if project.img %}
    <div class="col-sm-4">
      <img src="{{ project.img | relative_url }}" alt="{{ project.title }}" class="img-fluid">
    </div>
    <div class="col-sm-8">
    {% else %}
    <div class="col-sm-12">
    {% endif %}
      <h3>
        <a href="{{ project.url | relative_url }}">{{ project.title }}</a>
      </h3>
      {% if project.description %}
      <p>{{ project.description }}</p>
      {% endif %}
    </div>
  </div>
</div>

